@model Domain.DataTransferObjects.DepartmentPositionDTO

@{
    ViewData["Title"] = "Add Position to Department";
}

<h1>Add Position to Department</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AddPositionToDepartment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="DepartmentId" />

            <div class="form-group">
                <label asp-for="PositionId" class="control-label"></label>
                <select asp-for="PositionId" class="form-control" asp-items="ViewBag.PositionId"></select>
                <span asp-validation-for="PositionId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="PositionCount" class="control-label"></label>
                <input asp-for="PositionCount" class="form-control" />
                <span asp-validation-for="PositionCount" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>